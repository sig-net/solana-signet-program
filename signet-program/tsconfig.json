{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true
  }
}
